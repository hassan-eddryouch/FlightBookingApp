<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_tickett"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IndiGo"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_indigo"
                        android:layout_marginStart="3dp"/>

                </LinearLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="20 December 2022"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DEL"
                                android:textColor="#000000"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delhi International Airport"
                                android:textColor="#666666"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginHorizontal="8dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_flight_arrow"/>

                        </LinearLayout>

                        <!-- BLR -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="20dp"
                            android:gravity="start">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BLR"
                                android:textColor="#000000"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bengaluru International Airport"
                                android:textColor="#666666"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Duration -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="04h 30m"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <!-- Passenger Count -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person"
                            android:tint="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 Adult"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginStart="6dp"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_meal"
                            android:layout_marginStart="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meal"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginStart="6dp"/>

                    </LinearLayout>

                    <!-- Ticket Details Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp">

                        <!-- Column 1 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Passenger Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Passenger Name"
                                android:textColor="#999999"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shreya Kumar"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                            <!-- Boarding Time -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Boarding Time"
                                android:textColor="#999999"
                                android:textSize="10sp"
                                android:layout_marginTop="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="06:15 AM"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                        </LinearLayout>

                        <!-- Column 2 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Flight Type -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flight Type"
                                android:textColor="#999999"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Economy"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                            <!-- Gate -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gate"
                                android:textColor="#999999"
                                android:textSize="10sp"
                                android:layout_marginTop="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A5"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                        </LinearLayout>

                        <!-- Column 3 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Flight Code -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flight Code"
                                android:textColor="#999999"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IG-2105"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                            <!-- Terminal -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terminal"
                                android:textColor="#999999"
                                android:textSize="10sp"
                                android:layout_marginTop="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T2"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                        </LinearLayout>

                        <!-- Column 4 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <!-- Seat Number -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seat Number"
                                android:textColor="#999999"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A5"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/dashe_line"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="24dp"
                        android:src="@drawable/barcode"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="1 2 5 8 4 2 2 4 7 5 3 1 3 5 0 6 7 5 9"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:letterSpacing="0.15"
                        android:fontFamily="monospace"/>

                    <!-- Terms & Condition -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="24dp"
                        android:text="Terms &amp; Condition"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="24dp"
                        android:text="Curabitur ultrices nisl ac vulputate lacinia. Donec pretium facilisis erat, estr finibus sollicitudin."
                        android:textColor="#666666"
                        android:textSize="11sp"
                        android:lineSpacingExtra="2dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Download E-Ticket Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownloadTicket"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:text="Download E-Ticket"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="16dp"
                app:backgroundTint="#6C63FF"/>

        </LinearLayout>

    </ScrollView>
</FrameLayout>